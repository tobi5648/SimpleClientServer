<Window x:Class="SimpleClientServer.Chatroom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleClientServer"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Chatroom" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="txtChatBox" HorizontalAlignment="Left" Height="121" Margin="10,10,0,0" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="258"/>
        <TextBox x:Name="txtMessageBox" HorizontalAlignment="Left" Height="41" Margin="10,136,0,0" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" Width="183"/>

    </Grid>
</Window>
